{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "build-time-constants/build.d.ts",
    "build-time-constants/constants.d.ts",
    "src/**/*.ts",
    "./global.d.ts"
  ],
  "exclude": ["node_modules"]
}
